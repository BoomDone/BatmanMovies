{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es7"],
    "skipLibCheck": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../out-tsc/spec",
    "allowJs": true,
    "module": "commonjs",
    "baseUrl": "./",
    "types": [
      "jest",
      "jasmine",
      "node"
    ]
  },
  "include": [
    "polyfills.ts",
    "**/**.spec.ts",
    "**/*.d.ts"
  ]
}